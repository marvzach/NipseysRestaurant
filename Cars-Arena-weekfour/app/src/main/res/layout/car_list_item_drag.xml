<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="5dp"
android:orientation="horizontal">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/carrImageView"
        android:src="@drawable/r"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/dragIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/carrImageView"
        android:layout_alignBottom="@id/carrImageView"
        android:gravity="bottom|left"
        android:src="@drawable/baseline_reorder_black_18dp"/>

</RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carNameTextView"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/black_ops_one"
        android:text="Car Name"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Type"
        android:id="@+id/categoryTextView"
        android:layout_below="@+id/carNameTextView"
        android:fontFamily="@font/black_ops_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="italic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:fontFamily="@font/black_ops_one"
            android:id="@+id/priceTextView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/black_ops_one"
            android:text="Body"
            android:id="@+id/Body"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/black_ops_one"
            android:text="Engine"
            android:id="@+id/Engine"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>

</LinearLayout>

</LinearLayout>